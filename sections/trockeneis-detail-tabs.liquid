{%- comment -%}
  ============================================================
  Sektion: Trockeneis Detail-Tabs (All-in-One)
  Version: Robust
  - Beinhaltet Liquid, CSS und JS in einer einzigen Datei.
  - Das JS ist speziell für die Neu-Lade-Events des
    Shopify Theme Editors stabilisiert, um das "Verschwinden"
    von Inhalten nach dem Hinzufügen von Blöcken zu verhindern.
  ============================================================
{%- endcomment -%}

<style>
  /* ===== Trockeneis Detail Tabs – CSS ===== */
  #te-detail-{{ section.id }} .te-container { max-width: 1120px; margin: 0 auto; padding: 0 20px; }
  #te-detail-{{ section.id }} .te-section { padding: 48px 0; }
  #te-detail-{{ section.id }} .te-grid { display: grid; grid-template-columns: 1fr; gap: 24px; }
  #te-detail-{{ section.id }} .te-main { min-width: 0; }
  #te-detail-{{ section.id }} .te-aside { min-width: 0; }

  @media (min-width: 992px){
    #te-detail-{{ section.id }} .te-grid { grid-template-columns: minmax(0, 1fr) 352px; gap: 32px; }
  }

  #te-detail-{{ section.id }} {
    --fs-base: {{ section.settings.fs_base }}px;
    --fs-h1: {{ section.settings.fs_h1 }}px;
    --fs-h2: {{ section.settings.fs_h2 }}px;
    --fs-h3: {{ section.settings.fs_h3 }}px;
    --color-body: {{ section.settings.color_body }};
    --color-head: {{ section.settings.color_head }};
    --hero-start: {{ section.settings.hero_start }};
    --hero-end: {{ section.settings.hero_end }};
    --hero-text: {{ section.settings.hero_text }};
    font-size: var(--fs-base);
    color: var(--color-body);
  }
  #te-detail-{{ section.id }} .te-h1{ font-size: var(--fs-h1); font-weight: 900; color: var(--color-head); margin: 0 0 8px; }
  #te-detail-{{ section.id }} .te-h5{ font-size: 20px; font-weight: 800; margin: 0 0 8px; }
  #te-detail-{{ section.id }} .te-h6{ font-size: var(--fs-h3); font-weight: 800; margin: 0 0 8px; }
  #te-detail-{{ section.id }} .te-lead{ color: var(--hero-text); opacity: .9; }

  #te-detail-{{ section.id }} .te-pillbar { 
    --pill-normal-bg: {{ section.settings.pill_bg }};
    --pill-normal-text: {{ section.settings.pill_text }};
    --pill-border-color: {{ section.settings.pill_border }};
    --pill-hover-bg: {{ section.settings.pill_hover_bg }};
    --pill-hover-text: {{ section.settings.pill_hover_text }};
    --pill-active-bg: {{ section.settings.pill_active_bg }};
    --pill-active-text: {{ section.settings.pill_active_text }};
    position: relative; top: 0; z-index: 30; background: #ffffffcc; backdrop-filter: blur(8px); border-bottom: 1px solid rgba(2,6,23,.10); 
  }
  {% if section.settings.sticky %}
  #te-detail-{{ section.id }} .te-pillbar { position: sticky; top: {{ section.settings.sticky_offset }}px; }
  {% endif %}
  #te-detail-{{ section.id }} .te-pillbar__wrap { display:flex; align-items:center; gap:16px; padding: 10px 0; }
  #te-detail-{{ section.id }} .te-pillbar__title { font-weight: 700; white-space: nowrap; }
  #te-detail-{{ section.id }} .te-pillbar__pills { display:flex; flex-wrap: wrap; gap: 8px; }

  #te-detail-{{ section.id }} .te-pill {
    display:inline-flex; align-items:center; gap:8px;
    padding: 7px 14px; border-radius: 999px; text-decoration:none;
    background: var(--pill-normal-bg); color: var(--pill-normal-text); border: 1px solid var(--pill-border-color);
    transition: background .2s ease, color .2s ease, border-color .2s ease, transform .2s ease;
    line-height: 1;
  }
  #te-detail-{{ section.id }} .te-pill:hover { 
    background: var(--pill-hover-bg); color: var(--pill-hover-text); 
    transform: translateY(-1px);
  }
  #te-detail-{{ section.id }} .te-pill.is-active { background: var(--pill-active-bg); color: var(--pill-active-text); border-color: var(--pill-active-bg); }

  #te-detail-{{ section.id }} .te-hero-band {
    background: linear-gradient(180deg, var(--hero-start) 0%, var(--hero-end) 100%);
    color: var(--hero-text);
    padding: 48px 0;
  }
  #te-detail-{{ section.id }} .te-breadcrumb.small { opacity:.9; margin: 0 0 8px; }
  #te-detail-{{ section.id }} .te-breadcrumb a { color: inherit; text-decoration: none; opacity:.85; }
  #te-detail-{{ section.id }} .te-breadcrumb a:hover { opacity: 1; text-decoration: underline; }

  #te-detail-{{ section.id }} .te-tiles { display: grid; grid-template-columns: 1fr; gap: 16px; align-items: stretch; }
  @media (min-width: 720px){ #te-detail-{{ section.id }} .te-tiles { grid-template-columns: 1fr 1fr; } }
  
  #te-detail-{{ section.id }} .te-tile,
  #te-detail-{{ section.id }} .te-feature { 
    border:1px solid rgba(2,6,23,.10); 
    border-radius: 16px; 
    padding: 18px; 
    background: #fff; 
    box-shadow: 0 1px 0 rgba(0,0,0,.02), 0 16px 40px rgba(2,6,23,.06);
    transition: transform .25s ease, box-shadow .25s ease;
    display: flex;
    flex-direction: column;
  }

  #te-detail-{{ section.id }} .te-tile:hover,
  #te-detail-{{ section.id }} .te-feature:hover { 
    transform: translateY(-2px); 
    box-shadow: 0 1px 0 rgba(0,0,0,.02), 0 22px 56px rgba(2,6,23,.1); 
  }

  #te-detail-{{ section.id }} .te-tile__title { display:flex; align-items:center; gap:10px; font-weight: 800; margin: 0 0 6px; }
  #te-detail-{{ section.id }} .te-tile__text { color: var(--color-body); }
  #te-detail-{{ section.id }} .te-checklist { list-style:none; padding:0; margin: 10px 0 0; display:grid; gap:6px; }
  #te-detail-{{ section.id }} .te-checklist li { display:flex; gap:8px; align-items:flex-start; }
  #te-detail-{{ section.id }} .te-icon-check { width: 18px; height: 18px; display:inline-block; border-radius:50%; background: #16a34a; position: relative; margin-top: 2px; flex-shrink: 0; }
  #te-detail-{{ section.id }} .te-icon-check::after { content:''; position:absolute; inset: 4px 5px 4px 5px; border-right:2px solid #fff; border-bottom:2px solid #fff; transform: rotate(45deg); }

  #te-detail-{{ section.id }} .te-kpi { display:flex; align-items:center; gap:12px; padding: 10px 12px; border:1px solid rgba(2,6,23,.10); border-radius: 12px; background:#f8fafc; margin-top: 10px; }
  #te-detail-{{ section.id }} .te-callout { margin-top: 10px; border-left: 4px solid var(--pill-active-bg); background: #effaff; border-radius: 6px; padding: 10px 12px; }

  #te-detail-{{ section.id }} .te-feature--inline { padding: 8px 12px; border: none; box-shadow: none; background: transparent; }

  #te-detail-{{ section.id }} .te-aside__card { border:1px solid rgba(2,6,23,.10); border-radius: 16px; background:#fff; padding: 16px; box-shadow: 0 1px 0 rgba(0,0,0,.02), 0 16px 40px rgba(2,6,23,.06); position: sticky; top: {{ section.settings.sticky_offset | plus: 20 }}px; }
  #te-detail-{{ section.id }} .te-aside__list { list-style:none; padding:0; margin: 10px 0 0; display:grid; gap:6px; }
  #te-detail-{{ section.id }} .te-aside__list li { display: flex; gap: 8px; align-items: flex-start; }
  #te-detail-{{ section.id }} .te-icon-bullet { width: 6px; height: 6px; border-radius: 999px; background: var(--pill-active-bg); display:inline-block; margin-top: 8px; flex-shrink: 0; }

  #te-detail-{{ section.id }} .te-btn { display:inline-flex; align-items:center; justify-content:center; padding: 10px 14px; border-radius: 12px; text-decoration:none; font-weight: 700; margin-bottom: 10px; }
  #te-detail-{{ section.id }} .te-btn--primary { background: var(--btn-bg, #0ea5e9); color: var(--btn-text, #fff); border: 1px solid var(--btn-bg, #0ea5e9); }
  #te-detail-{{ section.id }} .te-btn--outline { background: transparent; color: var(--btn-text, var(--btn-outline, #0ea5e9)); border: 1px solid var(--btn-outline, #0ea5e9); }
  #te-detail-{{ section.id }} .te-btn.w-100 { width: 100%; }
  
  #te-detail-{{ section.id }} .small { font-size: .925em; }
  #te-detail-{{ section.id }} .te-muted { color: #475569; }

  #te-detail-{{ section.id }} .route { display: none; }
  #te-detail-{{ section.id }} .route.is-active { display: block; }
</style>

<section
  id="te-detail-{{ section.id }}"
  class="te-detail"
  data-section-id="{{ section.id }}"
>
  {%- assign tabs = section.blocks | where: 'type', 'tab' -%}

  <!-- Sticky Pillbar -->
  <nav class="te-pillbar" aria-label="{{ section.settings.nav_label | escape }}">
    <div class="te-container">
      <div class="te-pillbar__wrap">
        <div class="te-pillbar__title">{{ section.settings.nav_prefix }}</div>
        <div class="te-pillbar__pills" role="tablist">
          {%- for t in tabs -%}
            {%- assign handle = t.settings.handle | handleize -%}
            <a
              class="te-pill"
              role="tab"
              aria-selected="false"
              href="#{{ handle }}"
              data-tab="{{ handle }}"
            >
              {%- if t.settings.icon != blank -%}
                <i class="{{ t.settings.icon }}"></i>
              {%- endif -%}
              <span>{{ t.settings.label }}</span>
            </a>
          {%- endfor -%}
        </div>
      </div>
    </div>
  </nav>

  <!-- Tab-Panels -->
  {%- for t in tabs -%}
    {%- assign handle = t.settings.handle | handleize -%}
    <div class="te-tab route route-detail" id="{{ handle }}" data-route="{{ handle }}" role="tabpanel">
      <!-- Hero -->
      <div class="te-hero-band">
        <div class="te-container">
          <p class="te-breadcrumb small">
            {%- if t.settings.breadcrumb_parent != blank -%}
              {{ t.settings.breadcrumb_parent }} ·
            {%- endif -%}
            <span>{{ t.settings.label }}</span>
          </p>
          <h1 class="te-h1">{{ t.settings.title }}</h1>
          {%- if t.settings.subtitle != blank -%}
            <p class="te-lead">{{ t.settings.subtitle }}</p>
          {%- endif -%}
        </div>
      </div>

      <div class="te-container te-section">
        <div class="te-grid">
          <!-- Main Content -->
          <div class="te-main">
            <div class="te-tiles">
              {%- for b in section.blocks -%}
                {%- assign b_tab_handle = b.settings.tab_handle | handleize -%}
                {%- if b_tab_handle == handle -%}
                  {%- case b.type -%}
                    {%- when 'tile' -%}
                      <div class="te-tile">
                        <h5 class="te-tile__title">
                          {%- if b.settings.icon != blank -%}<i class="{{ b.settings.icon }}"></i>{%- endif -%}
                          {{ b.settings.title }}
                        </h5>
                        {%- if b.settings.text != blank -%}
                          <div class="te-tile__text rte">{{ b.settings.text }}</div>
                        {%- endif -%}
                        {%- if b.settings.checklist != blank -%}
                          <ul class="te-checklist">
                            {%- assign items = b.settings.checklist | newline_to_br | split: '<br />' -%}
                            {%- for i in items -%}
                              {%- if i != blank -%}
                                <li><i class="te-icon-check"></i><span>{{ i | strip }}</span></li>
                              {%- endif -%}
                            {%- endfor -%}
                          </ul>
                        {%- endif -%}
                        {%- if b.settings.kpi_enable -%}
                          <div class="te-kpi">
                            {%- if b.settings.kpi_icon != blank -%}<i class="{{ b.settings.kpi_icon }}"></i>{%- endif -%}
                            <div>
                              <strong>{{ b.settings.kpi_title }}</strong>
                              {%- if b.settings.kpi_sub != blank -%}
                                <div class="small">{{ b.settings.kpi_sub }}</div>
                              {%- endif -%}
                            </div>
                          </div>
                        {%- endif -%}
                        {%- if b.settings.callout_enable -%}
                          <div class="te-callout">
                            <strong>{{ b.settings.callout_title }}</strong>
                            {%- if b.settings.callout_text != blank -%}
                              <span> – {{ b.settings.callout_text }}</span>
                            {%- endif -%}
                          </div>
                        {%- endif -%}
                      </div>
                    {%- when 'kpi' -%}
                      <div class="te-feature te-feature--inline">
                        <div class="te-kpi">
                          {%- if b.settings.icon != blank -%}<i class="{{ b.settings.icon }}"></i>{%- endif -%}
                          <div>
                            <strong>{{ b.settings.title }}</strong>
                            {%- if b.settings.sub != blank -%}<div class="small">{{ b.settings.sub }}</div>{%- endif -%}
                          </div>
                        </div>
                      </div>
                    {%- when 'feature' -%}
                      <div class="te-feature">
                        <h6 class="te-h6">
                          {%- if b.settings.icon != blank -%}<i class="{{ b.settings.icon }}"></i>{%- endif -%}
                          {{ b.settings.title }}
                        </h6>
                        {%- if b.settings.items != blank -%}
                          <ul class="te-checklist">
                            {%- assign lines = b.settings.items | newline_to_br | split: '<br />' -%}
                            {%- for line in lines -%}
                              {%- if line != blank -%}
                                <li><i class="te-icon-check"></i><span>{{ line | strip }}</span></li>
                              {%- endif -%}
                            {%- endfor -%}
                          </ul>
                        {%- endif -%}
                      </div>
                  {%- endcase -%}
                {%- endif -%}
              {%- endfor -%}
            </div>
          </div>

          <!-- Sidebar -->
          <aside class="te-aside">
            {%- for s in section.blocks -%}
              {%- if s.type == 'sidebar' -%}
                {%- assign s_tab_handle = s.settings.tab_handle | handleize -%}
                {%- if s_tab_handle == handle and s.settings.show_sidebar -%}
                  <div class="te-aside__card">
                    <h5 class="te-h5">{{ s.settings.title }}</h5>
                    {%- if s.settings.text != blank -%}
                      <p class="small te-muted">{{ s.settings.text }}</p>
                    {%- endif -%}
                    {%- if s.settings.btn1_label != blank -%}
                      <a class="te-btn te-btn--primary w-100" href="{{ s.settings.btn1_link }}" style="--btn-bg: {{ s.settings.btn1_bg }}; --btn-text: {{ s.settings.btn1_text }};">{{ s.settings.btn1_label }}</a>
                    {%- endif -%}
                    {%- if s.settings.btn2_label != blank -%}
                      <a class="te-btn te-btn--outline w-100" href="{{ s.settings.btn2_link }}" style="--btn-outline: {{ s.settings.btn2_outline }}; --btn-text: {{ s.settings.btn2_text }};">{{ s.settings.btn2_label }}</a>
                    {%- endif -%}
                    {%- if s.settings.list != blank -%}
                      <hr>
                      <ul class="te-aside__list small">
                        {%- assign sitems = s.settings.list | newline_to_br | split: '<br />' -%}
                        {%- for li in sitems -%}
                          {%- if li != blank -%}
                            <li><i class="te-icon-bullet"></i><span>{{ li | strip }}</span></li>
                          {%- endif -%}
                        {%- endfor -%}
                      </ul>
                    {%- endif -%}
                  </div>
                {%- endif -%}
              {%- endif -%}
            {%- endfor -%}
          </aside>
        </div>
      </div>
    </div>
  {%- endfor -%}
</section>

<script>
  window.TrockeneisTabs = window.TrockeneisTabs || {};

  TrockeneisTabs.init = function(sectionEl) {
    const pills = sectionEl.querySelectorAll('.te-pill');
    const tabs = sectionEl.querySelectorAll('.te-tab');

    if (!pills.length || !tabs.length) {
      return;
    }

    const activateTab = (handle) => {
      const cleanHandle = (handle || '').replace('#', '');
      let targetTab = Array.from(tabs).find(t => t.dataset.route === cleanHandle);
      
      if (!targetTab) {
        targetTab = tabs[0];
      }

      const activeHandle = targetTab.dataset.route;

      tabs.forEach(t => t.classList.toggle('is-active', t.dataset.route === activeHandle));
      pills.forEach(p => {
        const isActive = p.dataset.tab === activeHandle;
        p.classList.toggle('is-active', isActive);
        p.setAttribute('aria-selected', isActive.toString());
      });

      if (window.location.hash !== `#${activeHandle}`) {
        history.replaceState(null, '', `#${activeHandle}`);
      }
    };

    sectionEl.addEventListener('click', (e) => {
      const pill = e.target.closest('.te-pill');
      if (pill) {
        e.preventDefault();
        activateTab(pill.getAttribute('href'));
      }
    });

    // Initial activation
    activateTab(window.location.hash || pills[0].getAttribute('href'));
  };

  document.addEventListener('DOMContentLoaded', () => {
    const sectionEl = document.querySelector('#te-detail-{{ section.id }}');
    if (sectionEl) {
      TrockeneisTabs.init(sectionEl);
    }
  });

  if (typeof Shopify !== 'undefined' && Shopify.designMode) {
    document.addEventListener('shopify:section:load', (event) => {
      const sectionEl = event.target.querySelector('#te-detail-{{ section.id }}');
      if (sectionEl) {
        TrockeneisTabs.init(sectionEl);
      }
    });
  }
</script>


